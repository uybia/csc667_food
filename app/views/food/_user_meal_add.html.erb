<div class="tab-content">
  <div class="tab-pane active" id="recent">
       <form class="add-food" action="food/add_item" method="post"> 
   <% recent.each do |item| %>
     <div class="radio">
       <label>
       <input type="radio" name="food_item" value=<%= item.id %> >
       <%= item.name %> </br>
       </label>
             <input type="hidden" name="d" value=<%=params[:d]%> />
             <input type="hidden" name="meal" value=<%=params[:meal]%> />
     </div>
   <% end %>
         <button type="submit" class="btn btn-default">Save</button>
   </form> 
  </div>

  <div class="tab-pane" id="frequent">
       <form class="add-food" action="food/add_item" method="post"> 
   <% frequent.each do |item| %>
     <div class="radio">
       <label>
       <input type="radio" name="food_item" value=<%= item.id %> >
       <%= item.name %> </br>
       </label>
             <input type="hidden" name="d" value=<%=params[:d]%> />
             <input type="hidden" name="meal" value=<%=params[:meal]%>/>
     </div>
   <% end %>
         <button type="submit" class="btn btn-default">Save</button>
   </form> 
  </div>

  <div class="tab-pane" id="allmeals">
       <form class="add-food" action="food/add_item" method="post"> 
        <% allmeal.each do |item| %>
          <div class="radio">
             <label>
             <input type="radio" name="food_item" value=<%= item.id %> />
               <%= item.name %> </br>
             </label>
             <input type="hidden" name="d" value=<%=params[:d]%> />
             <input type="hidden" name="meal" value=<%=params[:meal]%> />
          </div>
        <% end %>
         <button type="submit" class="btn btn-default">Save</button>
      </form>
  </div>
</div> <!-- end .tab-content -->

