<h1> Add a new food to the database  </h1>

<%= form_for :food, :url => food_create_path do |f| %>
  <%= f.label :name, 'Food Name' %>
  <%= f.text_field :name, :required => true %><br>
  <%= f.label :calories, 'Calories' %>
  <%= f.text_field :calories, :required => true %><br>
  <%= f.label :totalfat, 'Total Fat' %>
  <%= f.text_field :totalfat %><br>
  <%= f.label :saturated, 'Saturated Fat' %>
  <%= f.text_field :saturated %><br>
  <%= f.label :polyunsaturated, 'Polyunsaturated Fat' %>
  <%= f.text_field :polyunsaturated %><br>
  <%= f.label :monosaturated, 'Monosaturated Fat' %>
  <%= f.text_field :monosaturated %><br>
  <%= f.label :transfat, 'Transfat' %>
  <%= f.text_field :transfat %><br>
  <%= f.label :cholesterol, 'Cholesterol' %>
  <%= f.text_field :cholesterol %><br>
  <%= f.label :sodium, 'Sodium' %>
  <%= f.text_field :sodium %><br>
  <%= f.label :potassium, 'Potassium' %>
  <%= f.text_field :potassium %><br>
  <%= f.label :carbs, 'Carbs' %>
  <%= f.text_field :carbs %><br>
  <%= f.label :fiber, 'Fiber' %>
  <%= f.text_field :fiber %><br>
  <%= f.label :sugar, 'Sugar' %>
  <%= f.text_field :sugar %><br>
  <%= f.label :protein, 'Protein' %>
  <%= f.text_field :protein %><br>
<%= f.submit 'Submit', :class => 'btn btn-primary' %>
<% end %> 
